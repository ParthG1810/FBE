{
  "name": "electron-react-fullstack",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"npm run frontend\" \"npm run electron:wait\"",
    "backend": "cd backend && npm run dev",
    "frontend": "cd frontend && npm run dev",
    "electron:dev": "concurrently \"npm run backend\" \"npm run frontend\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:wait": "wait-on http://localhost:3000 && electron .",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  }
}